package app.view.helpers {        import com.adobe.webapis.flickr.Photo;            /**     * Helper to build image urls     *      * @author David Knape     */    public class UrlHelper {            // Size Types        // s    small square 75x75        static public const SMALL_SQUARE:String="s";                // t    thumbnail, 100 on longest side        static public const THUMBNAIL:String="t";                // m    small, 240 on longest side        static public const SMALL:String="m";                // -    medium, 500 on longest side        static public const MEDIUM:String="d";                // b    large, 1024 on longest side (only exists for very large original images)        static public const LARGE:String="b";                        static public function getFlickrUrl( photo:Photo, type:String='m' ) : String {            return "http://farm"+photo.farm+".static.flickr.com/"+photo.server+"/"+photo.id+"_"+photo.secret+"_"+type+".jpg";        }                    }        }